<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--九宫格控件-->
  <declare-styleable name="NineGridView">
    <attr name="singleImgSize" format="dimension"/>
    <attr name="imgGap" format="dimension"/>
    <attr name="maxSize" format="integer"/>
    <attr name="showStyle" format="enum">
      <enum name="grid" value="0"/>
      <enum name="fill" value="1"/>
    </attr>
  </declare-styleable>
  <declare-styleable name="DiscreteBanner">
    <attr name="dsv_orientation" format="enum">
      <enum name="horizontal" value="0"/>
      <enum name="vertical" value="1"/>
    </attr>
  </declare-styleable>
  <declare-styleable name="DotsIndicator">
    <attr name="dots_count" format="integer"/>
    <attr name="selected_dot_scale_factor" format="float"/>
    <attr name="selected_dot_resource" format="reference"/>
    <attr name="unselected_dot_resource" format="reference"/>
    <attr name="first_selected_dot_resource" format="reference"/>
    <attr name="first_unselected_dot_resource" format="reference"/>
    <attr name="dot_size" format="dimension"/>
    <attr name="last_dot_size" format="dimension"/>
    <attr name="margins_between_dots" format="dimension"/>
  </declare-styleable>

  <!--圆角控件-->
  <attr name="corner_radius" format="dimension"/>
  <declare-styleable name="GeneralRoundLinearLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundRelativeLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundFrameLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundConstraintLayout">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralRoundImageView">
    <attr name="corner_radius"/>
  </declare-styleable>
  <declare-styleable name="GeneralCircleImageView">
    <attr name="corner_radius"/>
  </declare-styleable>

  <declare-styleable name="DrawableTextView">
    <attr name="drawableLeftWidth" format="dimension"/>
    <attr name="drawableLeftHeight" format="dimension"/>
    <attr name="drawableRightWidth" format="dimension"/>
    <attr name="drawableRightHeight" format="dimension"/>
    <attr name="drawableTopWidth" format="dimension"/>
    <attr name="drawableTopHeight" format="dimension"/>
    <attr name="drawableBottomWidth" format="dimension"/>
    <attr name="drawableBottomHeight" format="dimension"/>
  </declare-styleable>

  <declare-styleable name="DrawableEditText">
    <attr name="drawableLeftWidth" format="dimension"/>
    <attr name="drawableLeftHeight" format="dimension"/>
    <attr name="drawableRightWidth" format="dimension"/>
    <attr name="drawableRightHeight" format="dimension"/>
    <attr name="drawableTopWidth" format="dimension"/>
    <attr name="drawableTopHeight" format="dimension"/>
    <attr name="drawableBottomWidth" format="dimension"/>
    <attr name="drawableBottomHeight" format="dimension"/>
  </declare-styleable>
</resources>