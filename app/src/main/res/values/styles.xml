<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppTheme">

    </style>
    <!-- 启动页风格 -->
    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:windowBackground">@drawable/icon_splash_bg</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- 自定义Dialog动画 -->
    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out</item>
    </style>
</resources>
