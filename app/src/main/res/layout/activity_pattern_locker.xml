<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.github.ihsg.patternlocker.PatternIndicatorView
      android:id="@+id/lockerIndicator"
      android:layout_width="60dp"
      android:layout_height="0dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="20dp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <com.github.ihsg.patternlocker.PatternLockerView
      android:id="@+id/lockerPattern"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_margin="20dp"
      android:layout_marginStart="100dp"
      android:layout_marginEnd="100dp"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintTop_toBottomOf="@id/lockerIndicator"
      />
</androidx.constraintlayout.widget.ConstraintLayout>