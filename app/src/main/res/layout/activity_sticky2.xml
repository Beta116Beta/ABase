<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    >

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/sticky2Recycler1Parent"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:visibility="invisible"
      tools:visibility="visible"
      >

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/sticky2Recycler1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        />

    <LinearLayout
        android:layout_width="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <cc.abase.demo.widget.LineView
          android:layout_width="80dp"
          android:layout_height="40dp"
          android:background="@color/gray_CCCCCC"
          />

      <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/gray"
          />
    </LinearLayout>

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="end"
        android:padding="5dp"
        android:text="科目"
        android:textColor="@color/red"
        android:textSize="14sp"
        />

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:gravity="bottom"
        android:padding="5dp"
        android:text="姓名"
        android:textColor="@color/red"
        android:textSize="14sp"
        />

    <View
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="@+id/sticky2Recycler1"
        app:layout_constraintStart_toEndOf="@id/sticky2Recycler1"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <HorizontalScrollView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:overScrollMode="never"
      android:scrollbars="none"
      >

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/sticky2Recycler2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:visibility="invisible"
        tools:visibility="visible"
        android:scrollbars="none"
        />
  </HorizontalScrollView>
</LinearLayout>