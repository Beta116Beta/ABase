<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/marqueeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/green_3D9140"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="59" />

    <cc.abase.demo.widget.MarqueeTextView
        android:id="@+id/marqueeContent1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:shadowColor="@color/black_75"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="@color/magenta"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/marqueeTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/marqueeTime"
        app:layout_constraintTop_toTopOf="@id/marqueeTime"
        tools:text="这是一个很长很长的测试跑马灯效果的描述文字，如果不够长，在来一次即可" />

    <cc.abase.demo.widget.MarqueeTextView
        android:id="@+id/marqueeContent2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:shadowColor="@color/black_75"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:textColor="@color/magenta"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marqueeContent1"
        tools:text="这是一个很长很长的测试跑马灯效果的描述文字，如果不够长，在来一次即可" />

</androidx.constraintlayout.widget.ConstraintLayout>