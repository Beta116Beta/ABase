<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner5_top_gray"
    android:orientation="vertical"
    >

  <TextView
      android:id="@+id/dialogDateCancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="12dp"
      android:text="@string/cancel"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/dialogDateConfirm"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:padding="12dp"
      android:text="@string/confirm"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <!--https://github.com/limxing/DatePickerView-->
  <top.leefeng.datepicker.DatePickerView
      android:id="@+id/dialogDateView"
      android:layout_width="match_parent"
      android:layout_height="220dp"
      android:paddingTop="0dp"
      android:paddingBottom="0dp"
      app:dpvBackgroundColor="@color/white"
      app:dpvDateEnableAlpha="true"
      app:dpvDatePaddingEnd="20dp"
      app:dpvDatePaddingStart="20dp"
      app:dpvDateSize="5"
      app:dpvDateTextColor="@color/colorAccent"
      app:dpvDateTextSideColor="@color/colorPrimary"
      app:dpvDateTextSize="22sp"
      app:dpvLineColor="@color/magenta"
      app:dpvLineWidth="1dp"
      app:dpvUnitMarginStart="10dp"
      app:dpvUnitScroll="true"
      app:dpvUnitTextColor="@color/purple_8A2BE2"
      app:dpvUnitTextSize="20sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/dialogDateCancel"
      />
</androidx.constraintlayout.widget.ConstraintLayout>