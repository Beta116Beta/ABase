<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <cc.ab.base.widget.discretescrollview.DiscreteScrollView
      android:id="@+id/galleryRecycler"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <ImageView
        android:id="@+id/galleryBack"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:contentDescription="@null"
        android:padding="12dp"
        android:src="@drawable/svg_back_black"
        />

    <TextView
        android:id="@+id/galleryNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_half_black35"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:text="13/270"
        />
  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>