<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <!--三个图片是为了和window背景无缝过渡-->
  <ImageView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@null"
      android:src="@drawable/splash_top"
      app:layout_constraintDimensionRatio="1080:350"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <ImageView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@null"
      android:src="@drawable/splash_bottom"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintDimensionRatio="1080:350"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <ImageView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:contentDescription="@null"
      android:src="@drawable/splash_center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <!--封面-->
  <me.panpf.sketch.SketchImageView
      android:id="@+id/splashCover"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:contentDescription="@null"
      android:scaleType="centerCrop"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <!--倒计时-->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      >

    <TextView
        android:id="@+id/splashTime"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/shape_half_dark_green"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:text="3"
        />
  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>