<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <!--状态栏布局填充-->
  <View
      android:id="@+id/videoDetailStatus"
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@color/black"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />
  <!--非全屏播放器-->
  <cc.abase.demo.widget.video.view.ExoVideoView
      android:id="@+id/videoDetailVideoView"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:corner_radius="0dp"
      app:layout_constraintDimensionRatio="16:9"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/videoDetailStatus"
      />
  <!--返回按钮-->
  <ImageView
      android:id="@+id/videoDetailBack"
      android:layout_width="@dimen/dkplayer_controller_height"
      android:layout_height="@dimen/dkplayer_controller_height"
      android:layout_gravity="center"
      android:contentDescription="@null"
      android:padding="@dimen/dkplayer_controller_icon_padding"
      android:src="@drawable/dkplayer_ic_action_arrow_back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/videoDetailVideoView"
      />
  <!--评论列表等-->
  <com.airbnb.epoxy.EpoxyRecyclerView
      android:id="@+id/videoDetailRecycler"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/videoDetailVideoView"
      />
</androidx.constraintlayout.widget.ConstraintLayout>