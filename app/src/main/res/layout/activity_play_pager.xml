<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    >

  <com.scwang.smart.refresh.layout.SmartRefreshLayout
      android:id="@+id/verticalPagerRefresh"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

    <cc.abase.demo.widget.VerticalViewPager
        android:id="@+id/verticalPagerViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a1a1a"
        android:overScrollMode="never"
        android:scrollbars="none"
        />
  </com.scwang.smart.refresh.layout.SmartRefreshLayout>
  <!--返回-->
  <ImageView
      android:id="@+id/verticalPagerBack"
      android:layout_width="@dimen/dkplayer_controller_height"
      android:layout_height="@dimen/dkplayer_controller_height"
      android:contentDescription="@null"
      android:padding="@dimen/dkplayer_controller_icon_padding"
      android:src="@drawable/dkplayer_ic_action_arrow_back"
      tools:background="@drawable/dkplayer_shape_standard_controller_top_bg"
      />
</FrameLayout>