<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_5_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="8dp"
    tools:context=".widget.dialog.CommAlertDialog"
    >

  <TextView
      android:id="@+id/commAlertTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingTop="12dp"
      android:paddingEnd="16dp"
      android:textColor="#272727"
      android:textSize="20sp"
      android:textStyle="normal"
      tools:text="标题"
      tools:visibility="visible"
      />

  <LinearLayout
      android:id="@+id/commContentLl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <TextView
        android:id="@+id/commAlertContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:textColor="#272727"
        android:textSize="15sp"
        android:visibility="gone"
        tools:text="内容"
        tools:visibility="visible"
        />
  </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
      android:layout_marginTop="27dp"
      android:background="#DFDFDF"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="43.5dp"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/commAlertCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/取消"
        android:textColor="#272727"
        android:textSize="15sp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <View
        android:id="@+id/commBtnLine"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#DFDFDF"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/commAlertConfirm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/确定"
        android:textColor="#272727"
        android:textSize="15sp"
        tools:visibility="visible"
        />
  </LinearLayout>

</LinearLayout>