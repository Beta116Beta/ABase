<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cc.abase.demo">
  <!--APP安装权限-->
  <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
  <!--bugly-->
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.READ_LOGS" />
  <application
      android:name=".app.MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      tools:ignore="AllowBackup,GoogleAppIndexingWarning">
    <!--启动页-->
    <activity
        android:name=".component.splash.SplashActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:theme="@style/SplashTheme"
        android:windowSoftInputMode="adjustPan|stateHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <!--引导页-->
    <activity
        android:name=".component.splash.GuideActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--登录页-->
    <activity
        android:name=".component.login.LoginActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--注册页-->
    <activity
        android:name=".component.login.RegisterActivity"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--主页-->
    <activity
        android:name=".component.main.MainActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTask"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--web-->
    <activity
        android:name=".component.web.WebActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--聊天页面模拟-->
    <activity
        android:name=".component.chat.ChatActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden" />
    <!--视频封面获取和压缩-->
    <activity
        android:name=".component.ffmpeg.RxFFmpegActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--视频详情页-->
    <activity
        android:name=".component.ffmpeg.VideoDetailActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--图片预览-->
    <activity
        android:name=".component.gallery.GalleryActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden"/>
    <!--Sticky效果页面-->
    <activity
        android:name=".component.sticky.StickyActivity"
        android:configChanges="screenLayout|orientation"
        android:launchMode="singleTop"
        android:screenOrientation="portrait"
        android:windowSoftInputMode="adjustPan|stateHidden" />
    <!-- APK更新 -->
    <service android:name=".component.update.CcUpdateService"/>
    <!-- 点击通知栏的操作 -->
    <receiver android:name=".component.update.NotificationBroadcastReceiver"/>
  </application>

</manifest>